# ============================================
# BiteMate Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# ============================================
# GOOGLE AI
# ============================================
# Required: Google Gemini API key for AI agents
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ============================================
# POSTGRESQL DATABASE
# ============================================
# Required: PostgreSQL database for user profiles and meal data
PG_DB_NAME=bitemate_db
PG_USER=your_postgres_username
PG_PASSWORD=your_postgres_password
PG_HOST=localhost
PG_PORT=5432

# ============================================
# PINECONE VECTOR DATABASE
# ============================================
# Required: Pinecone for semantic search and memory storage
# Sign up at: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_MEMORY_INDEX_NAME=bitemate-memory

# Note: Make sure your Pinecone index dimension matches your embedding model
# For 'all-MiniLM-L6-v2' (default), use dimension: 384

# ============================================
# EXTERNAL API KEYS (Optional)
# ============================================
# These are optional but enhance recipe and nutrition features

# Nutritionix API (for nutrition data)
# Get from: https://developer.nutritionix.com/
NUTRITIONIX_APP_ID=your_nutritionix_app_id
NUTRITIONIX_API_KEY=your_nutritionix_api_key

# Spoonacular API (for recipe search)
# Get from: https://spoonacular.com/food-api
SPOONACULAR_API_KEY=your_spoonacular_api_key

# USDA FoodData Central API (for food database)
# Get from: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your_usda_api_key

# ============================================
# APPLICATION SETTINGS (Optional)
# ============================================
# Uncomment and modify if you need custom settings

# APP_NAME=BiteMate
# LOG_LEVEL=INFO
# ENVIRONMENT=development

# FastAPI Settings
# API_HOST=0.0.0.0
# API_PORT=8000

# Streamlit Settings  
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=localhost
